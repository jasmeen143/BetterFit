<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MuscleTraining"
    android:background="#949075"
    android:orientation="vertical">

    <TextView
        android:id="@+id/muscleTrainingTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#000"
        android:layout_gravity="center"
        android:textSize="50sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="325dp"
            android:layout_height="63dp"
            android:textAlignment="center"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btnSubmit"
            android:textSize="30sp"
            android:layout_width="0dp"
            android:layout_height="63dp"
            android:layout_weight="1"
            android:text="GET" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="440dp"
        android:id="@+id/main_recycler_view"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="136dp"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/muscleTraining_workout"
                android:layout_width="100dp"
                android:layout_marginStart="18dp"
                android:background="@drawable/workout"
                android:layout_height="match_parent"
                android:textAlignment="center"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="136dp"
            android:layout_height="match_parent"
            >
            <Button
                android:id="@+id/muscleTraining_recovery"
                android:layout_width="100dp"
                android:layout_marginStart="18dp"
                android:layout_height="match_parent"
                android:background="@drawable/recovery"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="136dp"
            android:layout_height="match_parent"
            >
            <Button
                android:id="@+id/muscleTraining_log"
                android:layout_width="100dp"
                android:layout_marginStart="25dp"
                android:layout_height="match_parent"
                android:background="@drawable/log"
                android:textAlignment="center" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="136dp"
            android:layout_height="match_parent"
            android:text="WORKOUT"
            android:textColor="#000000"
            android:textAlignment="center" />
        <TextView
            android:layout_width="136dp"
            android:layout_height="match_parent"
            android:textColor="#000000"
            android:text="RECOVERY"
            android:textAlignment="center" />
        <TextView
            android:layout_width="136dp"
            android:layout_height="match_parent"
            android:text="LOG"
            android:textColor="#000000"
            android:textAlignment="center" />
    </LinearLayout>

</LinearLayout>