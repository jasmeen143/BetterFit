<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#949075"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:background="#fff"
            android:id="@+id/main_tv_1"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginStart="25dp"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:background="#fff"
            android:id="@+id/main_tv_2"
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:layout_marginStart="40dp"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="@string/title_workout"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:textColor="#000"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="465dp"
        android:id="@+id/main_recycler_view"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_seperator"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="136dp"
            android:layout_height="match_parent"
            >

            <Button
            android:layout_width="100dp"
             android:layout_marginStart="18dp"
            android:background="@drawable/menu_workout"
            android:layout_height="match_parent"
            android:textAlignment="center"
            />

        </LinearLayout>

        <LinearLayout
            android:layout_width="136dp"
            android:layout_height="match_parent"
            >

            <Button
                android:id="@+id/main_recovery"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginStart="18dp"
                android:background="@drawable/menu_recovery" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="136dp"
            android:layout_height="match_parent"
            >
        <Button
            android:id="@+id/main_log"
            android:layout_width="100dp"
            android:layout_marginStart="25dp"
            android:layout_height="match_parent"
            android:background="@drawable/menu_log"
            android:textAlignment="center" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="136dp"
            android:layout_height="match_parent"
            android:text="@string/workout"
            android:textColor="#000000"
            android:textAlignment="center" />
        <TextView
            android:layout_width="136dp"
            android:layout_height="match_parent"
            android:textColor="#000000"
            android:text="@string/recovery"
            android:textAlignment="center" />
        <TextView
            android:layout_width="136dp"
            android:layout_height="match_parent"
            android:text="@string/about"
            android:textColor="#000000"
            android:textAlignment="center" />
    </LinearLayout>

</LinearLayout>